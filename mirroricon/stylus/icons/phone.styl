// phone 手机

.i-a-phone
    &:before, &:after
        left:50%
        transform: translate(-50%,-50%)

    &:before
        top: 50%
        width: .6em
        height: 1em
        border: 1px solid
        border-radius: .06em
        box-shadow: inset 0 .04em

    &:after
        top: 92%
        width: .6em
        height: .16em
        border-radius:0 0 .06em .06em
        background-image:radial-gradient(circle .05em,transparent 96%,currentColor)
   