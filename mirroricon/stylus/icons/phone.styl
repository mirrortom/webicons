// phone 手机

.i-a-phone
    &:before, &:after
        left:50%
        transform: translateX(-50%)

    &:before
        top:50%
        transform: translate(-50%,-50%)
        width: calc(.8em * .618)
        height: .8em
        border: .02em solid currentColor
        border-radius: .03em
        box-shadow: 0 .04em,inset 0 .01em

    &:after
        bottom: .15em
        width: .06em
        height: .06em
        border: 1px solid currentColor
        border-radius: .01em
        box-shadow: .12em -.24em,0 -.24em,-.12em -.24em,.12em -.36em,0 -.36em,-.12em -.36em,.12em -.48em,0 -.48em,-.12em -.48em
   