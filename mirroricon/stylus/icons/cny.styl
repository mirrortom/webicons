// 人民币,钱
// tan30=0.577,cos30=0.866

.i-fv-cny
    &:before
        // 2 * 0.5 * tan30
        width: .576em
        height: .5em
        box-shadow: inset 0 @css{min(-.08em,-1px)}
        // 0.5 * sin30
        background-image: linear-gradient(60deg,transparent .24em,currentColor .25em .33em,transparent .34em),linear-gradient(-60deg,transparent .24em,currentColor .25em .33em,transparent .34em)
 
    &:after
        width: @css{max(.08em,1px)}
        height: .3em
        background-color: currentColor