// 太阳 sun

.i-a-sun
    // [class^=i-]优先高,叠加后超过它
    &[class^=i-]
        width: .6em
        height: .6em
    &
        border-radius: 50%
        margin: .2em
        background-color: currentColor

    &:before, &:after
        left:50%
        top:50%
        width: .1em
        height: .1em
        background-color: transparent
        transform: translate(-50%,-50%)
      
    &:before
        box-shadow: .45em 0, 0 .45em, -.45em 0, 0 -.45em, .38em 0, 0 .38em, -.38em 0, 0 -.38em
    &:after
        transform: translate(-50%,-50%) rotate(45deg)
        box-shadow: .45em 0, 0 .45em, -.45em 0, 0 -.45em, .38em 0, 0 .38em, -.38em 0, 0 -.38em